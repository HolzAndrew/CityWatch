<hgroup>
  <h1>CityWatch</h1>
  <h3>Officer Login</h3>
</hgroup>
<div class="login">
<%= form_for(:session, url: login_path, :class => 'login') do |f|%>
  <div class="group">
    <!-- <input type="text"> -->
    <%= f.label :email %><br>
    <%= f.text_field :email %>
    <span class="highlight"></span><span class="bar"></span>
  </div>
  <div class="group">
  <!--   <input type="email"> -->
    <%= f.label :password %><br>
    <%= f.text_field :password, type: "password" %>
  <span class="highlight"></span><span class="bar"></span> 
  </div>
  <%= f.submit "Log In", class: "login_button"%>
    
   <% end %>
</div>
<hgroup>
  <h3><a href="/">Homepage</a></h3>
</hgroup>

