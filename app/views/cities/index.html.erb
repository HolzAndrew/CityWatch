<h1>Welcome to CityWatch</h1>
<h2>Please select a city below</h2>
    <% @cities.each do |city| %>
      <a href="/cities/<%=city.id%>/officers/login"><% city.name %> officer login</a>
      <br>
    <% end %>


<button id="demo-menu-lower-left"
        class="mdl-button mdl-js-button mdl-button--icon" class ="city_list">
  <i class="material-icons">more_vert</i>
</button>

<ul class="mdl-menu mdl-menu--bottom-left mdl-js-menu mdl-js-ripple-effect"
    for="demo-menu-lower-left">
   <li disabled class="mdl-menu__item mdl-menu__item--full-bleed-divider">Select your city</li>
   <% @cities.each do |city| %>

  <a href="/cities/<%=city.id%>/videos/new"><li class="mdl-menu__item"><%= city.name %></li></a>
  <% end %>
  
</ul>



